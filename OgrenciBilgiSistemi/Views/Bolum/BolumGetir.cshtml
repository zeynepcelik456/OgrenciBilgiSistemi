@model OgrData.Models.TblBolum

@{
    ViewData["Title"] = "BolumGetir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Bölüm Güncelle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
       @using (Html.BeginForm("BolumGuncelle", "Bolum", FormMethod.Post))
       {    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BolumAdı" class="control-label">Bölüm Adı</label>
                @Html.TextBoxFor(x=>x.BolumAdı, new  { @class ="form-control"})
                <span asp-validation-for="BolumAdı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BolumAcıklama" class="control-label">Bölüm Açıklama</label>
                @Html.TextBoxFor(x => x.BolumAcıklama, new { @class = "form-control" })
                <span asp-validation-for="BolumAcıklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BolumEposta" class="control-label">Bölüm Açıklaması</label>
                @Html.TextBoxFor(x => x.BolumEposta, new { @class = "form-control" })
                <span asp-validation-for="BolumEposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
       }
    </div>
</div>


