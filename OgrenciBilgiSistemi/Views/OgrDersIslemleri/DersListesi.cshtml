@model IEnumerable<OgrData.Models.TblDer>

@{
    ViewData["Title"] = "DersListesi";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Ders Listesi</div>
